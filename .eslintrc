{
    "env":           {
        "browser": true,
        "es6":     true
    },
    "extends":       [
        "eslint:recommended"
    ],
    "plugins":       ["babel", "vue"],
    "parserOptions": {
        "parser":      "babel-eslint",
        "ecmaVersion": 2019,
        "sourceType":  "module"
    },
    "rules":         {
        "no-prototype-builtins":       0,
        "no-case-declarations":        0,
        "new-cap":                     0,
        "no-unused-vars":              [
            "error",
            {
                "args": "after-used"
            }
        ],
        "indent":                      [
            "error", 4, {
                "SwitchCase":       1,
                "ObjectExpression": 1,
                "CallExpression":   {
                    "arguments": 1
                }
            }
        ],
        "linebreak-style":             [
            "error",
            "unix"
        ],
        "quotes":                      [
            "error",
            "single"
        ],
        "semi":                        [
            "error",
            "always"
        ],
        "arrow-spacing":               ["error"],
        "curly":                       ["error"],
        "no-use-before-define":        [
            "error",
            {
                "functions": false
            }
        ],
        "no-caller":                   ["error"],
        "no-trailing-spaces":          ["error"],
        "guard-for-in":                ["error"],
        "eqeqeq":                      ["error"],
        "no-var":                      ["error"],
        "no-bitwise":                  ["error"],
        "camelcase":                   [
            "error",
            {
                "properties": "never"
            }
        ],
        "no-proto":                    ["error"],
        "no-new-wrappers":             ["error"],
        "space-before-function-paren": [
            "error",
            {
                "named": "never"
            }
        ],
        "func-call-spacing":           ["error", "never"],
        "array-bracket-spacing":       ["error"],
        "space-in-parens":             ["error"],
        "quote-props":                 [
            "error",
            "as-needed",
            {
                "keywords":    false,
                "unnecessary": false
            }
        ],
        "space-unary-ops":             ["error"],
        "space-infix-ops":             ["error"],
        "comma-spacing":               ["error"],
        "yoda":                        ["error"],
        "no-with":                     ["error"],
        "no-multi-str":                ["error"],
        "no-multi-spaces":             [
            "error",
            {
                "exceptions": {
                    "VariableDeclarator":   true,
                    "AssignmentExpression": true,
                    "ImportDeclaration":    true
                }
            }
        ],
        "one-var":                     ["error", "never"],
        "semi-spacing":                ["error"],
        "space-before-blocks":         ["error"],
        "wrap-iife":                   ["error"],
        "comma-style":                 ["error"],
        "eol-last":                    ["error"],
        "dot-notation":                ["error"],
        "max-len":                     [
            "error", 120, {"ignoreStrings": true, "ignoreTemplateLiterals": true}
        ],
        "spaced-comment":              ["error"],
        "max-depth":                   ["error", 3],
        "no-multiple-empty-lines":     [
            "error", {
                "max": 1
            }
        ],
        "require-await":               ["error"],
        "no-throw-literal":            ["error"],
        "no-sequences":                ["error"],
        "comma-dangle":                [
            "error", {
                "arrays":    "always-multiline",
                "objects":   "always-multiline",
                "imports":   "always-multiline",
                "exports":   "always-multiline",
                "functions": "always-multiline"
            }
        ]
    }
}
